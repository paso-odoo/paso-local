<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_resource_types_view_form" model="ir.ui.view">
        <field name="name">medical.resource.types.form</field>
        <field name="model">medical.resource.types</field>
        <field name="arch" type="xml">
            <form string="Resource Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="medical_resource_types_view_tree" model="ir.ui.view">
        <field name="name">medical.resource.types.tree</field>
        <field name="model">medical.resource.types</field>
        <field name="arch" type="xml">
            <tree string="Resource Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="medical_resources_view_form" model="ir.ui.view">
        <field name="name">medical.resources.form</field>
        <field name="model">medical.resources</field>
        <field name="arch" type="xml">
            <form string="Resource">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="left_details">
                            <field name="working_hours_id"/>
                            <field name="type_id"/>
                        </group>
                        <group name="right_details">
                            <field name="description"/>
                            <!-- <field name="limit_per_day"/> -->
                        </group>
                    </group>
                    <group>
                        <field name="exclude_date_ids" string="Unavailable Dates">
                            <tree name="exclude_dates" editable="bottom">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="medical_resources_view_tree" model="ir.ui.view">
        <field name="name">medical.resources.tree</field>
        <field name="model">medical.resources</field>
        <field name="arch" type="xml">
            <tree string="Resource">
                <field name="name"/>
                <field name="type_id"/>
            </tree>
        </field>
    </record>

    <!-- Action view -->
    <record id="action_medical_resource_type" model="ir.actions.act_window">
        <field name="name">Resource Type</field>
        <field name="res_model">medical.resource.types</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_medical_ressources" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="res_model">medical.resources</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
