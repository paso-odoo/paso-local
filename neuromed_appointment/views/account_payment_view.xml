<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_nuromed_appointment" model="ir.ui.view">
        <field name="name">view.account.payment.form.inherit.neuromed_appointment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="branch_location_id" />
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_tree_inherit_nuromed_appointment" model="ir.ui.view">
        <field name="name">view.account.payment.tree.inherit.neuromed_appointment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="branch_location_id" />
            </xpath>
        </field>
    </record>
</odoo>
