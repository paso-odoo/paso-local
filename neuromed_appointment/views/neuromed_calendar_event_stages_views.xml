<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="neuromed_calendar_event_stages_view_form" model="ir.ui.view">
        <field name="name">neuromed.calendar.event.stages.form</field>
        <field name="model">neuromed.calendar.event.stages</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_quotation"/>
                        </group>
                        <group>
                            <field name="is_noshow"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="neuromed_calendar_event_stages_view_tree" model="ir.ui.view">
        <field name="name">neuromed.calendar.event.stages.tree</field>
        <field name="model">neuromed.calendar.event.stages</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="name"/>
                <field name="is_quotation"/>
                <field name="is_noshow"/>
            </tree>
        </field>
    </record>

    <!-- Action view -->
    <record id="action_neuromed_calendar_event_stages" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">neuromed.calendar.event.stages</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
