<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_nuromed_appointment" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.neuromed_appointment</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="appointment_type_id"/>
            </xpath>
            <xpath expr="//button[last()]" position="after">
                <button name="action_open_appointment_view" string="Appointment" type="object" class="oe_highlight" attrs="{'invisible':[('is_reservation','=',False)]}">
                    <field name="is_reservation" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
