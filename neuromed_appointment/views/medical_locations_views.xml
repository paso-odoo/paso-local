<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_locations_view_form" model="ir.ui.view">
        <field name="name">medical.locations.form</field>
        <field name="model">medical.locations</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="left_details">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group name="right_details">
                            <field name="address"/>
                            <field name="city"/>
                            <field name="country_id"/>
                            <field name="state_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="exclude_date_ids" string="Unavailable Dates">
                            <tree name="exclude_dates" editable="bottom">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="medical_locations_view_tree" model="ir.ui.view">
        <field name="name">medical.locations.tree</field>
        <field name="model">medical.locations</field>
        <field name="arch" type="xml">
            <tree string="Resource">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="website"/>
            </tree>
        </field>
    </record>

    <record id="action_medical_locations" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">medical.locations</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
