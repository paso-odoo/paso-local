<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_appointment_type_view_form" model="ir.ui.view">
        <field name="name">nueromed.appointment.type.form</field>
        <field name="model">nueromed.appointment.type</field>
        <field name="arch" type="xml">
            <form string="Appointment Types">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_reservation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medical_appointment_type_view_tree" model="ir.ui.view">
        <field name="name">nueromed.appointment.type.tree</field>
        <field name="model">nueromed.appointment.type</field>
        <field name="arch" type="xml">
            <tree string="Appointment Types">
                <field name="name"/>
                <field name="is_reservation"/>
            </tree>
        </field>
    </record>

    <!-- Action view -->
    <record id="action_medical_appointment_type" model="ir.actions.act_window">
        <field name="name">Appointment Types</field>
        <field name="res_model">nueromed.appointment.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
