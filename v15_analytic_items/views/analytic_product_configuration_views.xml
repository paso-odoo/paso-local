<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="analytic_product_configuration_form" model="ir.ui.view">
            <field name="name">analytic.product.configuration</field>
            <field name="model">analytic.product.configuration</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="account_id"/>
                                <field name="product_id"/>
                                <field name="commission_condition"/>
                            </group>
                            <group>
                                <field name="invoice_type"/>
                                <field name="invoice_sub_type"/>
                                <field name="location_id"/>
                                <field name="comm_amount" attrs="{'invisible': [('commission_condition', '=', 'percentage')]}"/>
                                <field name="comm_percentage" attrs="{'invisible': [('commission_condition', '=', 'amount')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="analytic_product_configuration_tree" model="ir.ui.view">
            <field name="name">analytic.product.configuration</field>
            <field name="model">analytic.product.configuration</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="create_uid"/>
                    <field name="account_id"/>
                    <field name="product_id"/>
                    <field name="commission_condition"/>
                    <field name="comm_amount"/>
                    <field name="comm_percentage"/>
                </tree>
            </field>
        </record>

        <record id="analytic_product_configuration_action" model="ir.actions.act_window">
            <field name="name">Analytic Product Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">analytic.product.configuration</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
